generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  username  String   @unique
  password  String
  todos     Todo[]
  tags      Tag[]
}

model Todo {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  doneAt    DateTime?
  title     String
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  todoTags  TodoTag[]
}

model Tag {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  userId    String
  name      String
  todoTags  TodoTag[]

  user User @relation(fields: [userId], references: [id])
}

model TodoTag {
  id     String @id @default(cuid())
  todoId String
  tagId  String
  todo   Todo   @relation(fields: [todoId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])
}
